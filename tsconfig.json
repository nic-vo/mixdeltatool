{
	"compilerOptions": {
		"target": "es6",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"assumeChangesOnlyAffectDirectDependencies": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"incremental": false,
		"isolatedModules": true,
		"jsx": "preserve",
		"module": "ESNext",
		"moduleResolution": "Node",
		"noEmit": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			"@lib/*": [
				"./src/lib/*"
			],
			"@components/*": [
				"./src/components/*"
			],
			"@types/*": [
				"./src/types/*"
			],
			"@consts/*": [
				"./src/consts/*"
			],
			"@styles/*": [
				"./src/styles/*"
			],
			"@hooks/*": [
				"./src/hooks/*"
			],
			"@state/*": [
				"./src/state/*"
			]
		},
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
